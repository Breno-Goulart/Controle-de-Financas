rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ğŸ‘¤ Regras para usuÃ¡rios
    match /users/{userId} {
      allow read: if request.auth != null
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.familiaId
           == resource.data.familiaId;

      allow update, delete: if request.auth != null
        && request.auth.uid == userId;

      allow create: if request.auth != null;
    }

    // ğŸ’° Regras para lanÃ§amentos
    match /artifacts/controle-de-financas-6e2d9/public/data/lancamentos/{lancamentoId} {

      function getAuthFamiliaId() {
        return request.auth.uid != null
          ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data.familiaId
          : null;
      }

      // ğŸ” Leitura â€” liberada para membros da mesma famÃ­lia (inclusive em queries)
      allow read: if request.auth != null
        && getAuthFamiliaId() != null;

      // âœï¸ CriaÃ§Ã£o â€” apenas se familiaId bate com a do usuÃ¡rio
      allow create: if request.auth != null
        && request.resource.data.familiaId == getAuthFamiliaId();

      // ğŸ“ AtualizaÃ§Ã£o â€” vÃ¡lida se o documento e a requisiÃ§Ã£o tÃªm mesma famÃ­lia
      allow update: if request.auth != null
        && resource.data.familiaId == getAuthFamiliaId()
        && request.resource.data.familiaId == resource.data.familiaId;

      // ğŸ—‘ï¸ ExclusÃ£o â€” permitida se o documento pertence Ã  mesma famÃ­lia
      allow delete: if request.auth != null
        && resource.data.familiaId == getAuthFamiliaId();
    }

    // ğŸ  Regras para famÃ­lias
    match /families/{familyId} {
      allow read: if request.auth != null;
    }
  }
}
