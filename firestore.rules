rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ğŸ”§ FunÃ§Ã£o auxiliar para obter o familiaId do usuÃ¡rio autenticado
    function getAuthFamiliaId() {
      return request.auth.uid != null
        ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data.familiaId
        : null;
    }

    // ğŸ‘¤ Regras para usuÃ¡rios
    match /users/{userId} {
      allow read: if request.auth != null && (
        request.auth.uid == userId ||
        resource.data.familiaId == getAuthFamiliaId()
      );
      allow update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // ğŸ’° Regras ajustadas para lanÃ§amentos
    match /artifacts/controle-de-financas-6e2d9/public/data/lancamentos/{lancamentoId} {
      // ğŸ” Leitura: permite queries com seguranÃ§a
      allow read: if request.auth != null && getAuthFamiliaId() != null;

      // âœï¸ CriaÃ§Ã£o: lanÃ§amento deve pertencer Ã  mesma famÃ­lia
      allow create: if request.auth != null
        && request.resource.data.familiaId == getAuthFamiliaId();

      // ğŸ“ AtualizaÃ§Ã£o: mesma famÃ­lia e sem troca de familiaId
      allow update: if request.auth != null
        && resource.data.familiaId == getAuthFamiliaId()
        && request.resource.data.familiaId == resource.data.familiaId;

      // ğŸ—‘ï¸ ExclusÃ£o: sÃ³ documentos da prÃ³pria famÃ­lia
      allow delete: if request.auth != null
        && resource.data.familiaId == getAuthFamiliaId();
    }

    // ğŸ  Regras para famÃ­lias
    match /families/{familyId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow update: if false;
    }
  }
}
